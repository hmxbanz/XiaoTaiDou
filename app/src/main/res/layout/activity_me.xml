<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SettingActivity">
    <include layout="@layout/layout_title_top" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_avator"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="头像"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <com.xtdar.app.view.widget.SelectableRoundedImageView
            android:id="@+id/img_avator"
            android:src="@drawable/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14sp"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="50dip"
            app:sriv_left_top_corner_radius="50dip"
            app:sriv_right_bottom_corner_radius="50dip"
            app:sriv_right_top_corner_radius="50dip"
            app:sriv_border_width="2dip"
            app:sriv_border_color="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="用户名"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/nick_name"
            android:gravity="center_vertical"
            android:text="昵称"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_modify_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txt_find_pwd"
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="收货地址"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>




</LinearLayout>